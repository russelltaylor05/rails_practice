<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<div>
  <h2>User Collections</h2>
  <ul>
  <% @collections.each do |col| %>  
    <li>
      <h3><%= col.name %></h3>
      <p><%= col.content %></p>
    </li>
  <% end %>
  </ul>
</div>